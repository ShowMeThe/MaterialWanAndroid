<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_toast"
    android:elevation="@dimen/px5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:elevation="@dimen/px3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px40dp"
        android:paddingLeft="@dimen/px80dp"
        android:paddingRight="@dimen/px80dp"
        android:paddingTop="@dimen/px40dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/px160dp"
            android:layout_height="@dimen/px160dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/px40dp" />

    </LinearLayout>
</RelativeLayout>