<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="Home"
            type="com.show.wanandroid.ui.main.fragment.HomeFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110dp"
            android:background="@color/colorAccent">

            <com.show.wanandroid.widget.IconSwitch
                android:id="@+id/iconSwitch"
                android:layout_width="@dimen/px60dp"
                android:layout_height="@dimen/px60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/px48dp"
                android:tint="@color/white"
                app:clickToTransition="false"
                app:defaultTint="@color/white"
                app:iconDefault="@drawable/ic_drawable"
                app:iconTransition="@drawable/ic_more"
                app:transitionTint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/home_title"
                android:textColor="@color/white"
                android:textSize="@dimen/px53dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/px90dp"
                android:layout_height="@dimen/px90dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/px48dp"
                android:src="@drawable/ic_search"
                android:tint="@color/white" />

        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                app:elevation="0dp"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp"
                    android:elevation="0dp"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="parallax"
                        >
                        <com.showmethe.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:autoPlay="true"
                            app:dotType="RECTANGLE"
                            app:dotWith="12dp"
                            app:imageScaleType="fitXY"
                            app:indicator_gravity="CENTER"
                            app:layout_constraintDimensionRatio="H,16:8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:scrollType="INFINITE" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:elevation="@dimen/px5dp"
                android:background="@drawable/shape_2_top_corner_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                >

                <showmethe.github.core.widget.common.AutoRecyclerView
                    android:id="@+id/rv"
                    android:fadingEdge="vertical"
                    android:fadingEdgeLength="@dimen/px20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoFix="false"
                 />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/px40dp"
                android:layout_marginBottom="@dimen/px30dp"
                android:tint="@color/white"
                android:tintMode="src_in"
                app:backgroundTint="@color/colorAccent"
                app:backgroundTintMode="src_in"
                app:fabSize="auto"
                app:layout_behavior="showmethe.github.core.util.widget.ScrollAwareFABBehavior"
                app:rippleColor="@color/colorAccent"
                app:srcCompat="@drawable/ic_home"
                app:tint="@color/white" />


            <com.showmethe.speeddiallib.expand.ExpandMenuChildLayout
                android:id="@+id/crl"
                android:elevation="@dimen/px10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/fab"
                app:layout_behavior="com.showmethe.speeddiallib.expand.ExpandBottomBehavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</layout>